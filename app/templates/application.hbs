<section id="todoapp">
    <header id="header">
        <h1>todos</h1>
        <input type="text" id="new-todo"  value={{createitem}} placeholder="What needs to be done?" onkeydown={{action 'createItem'}} autofocus="true">
        {{!-- <button type="hidden" {{action 'createItem'}}>LOL</button> --}}
        {{!-- {{input type="text" id="new-todo" value=createitem placeholder="What needs to be done?" key-press=(action 'createItem') autofocus="true"}} --}}
    </header>
    <div>
        {{input type="checkbox" id="toggle-all" style="top: 10px;" checked=checkAll}}
    </div>

    {{outlet}}
    
    <footer id="footer">
        <span id="todo-count">
            <strong>{{notCompleted.length}} item left</strong>
        </span>
        <ul id="filters">
            <li>{{#link-to 'index' activeClass='selected'}}All{{/link-to}}</li>
            <li>{{#link-to 'actives' activeClass='selected'}}Active{{/link-to}}</li>
            <li>{{#link-to 'completes' activeClass='selected'}}Completed{{/link-to}}</li>
        </ul>
        <button id="clear-completed" {{action 'clearComplete'}} >Clear completed</button>
    </footer>
</section>

    